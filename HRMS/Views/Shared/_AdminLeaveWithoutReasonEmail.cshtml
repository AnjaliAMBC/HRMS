@model List<con_leaveupdate>

@{
    var siteURL = System.Configuration.ConfigurationManager.AppSettings["siteURL"];
    var logoURL = siteURL + "/Assets/AMBC_Logo.png";
}

<style>
    body {
        font-family: Arial, sans-serif;
        color: #333;
    }

    .email-container {
        border: 1px solid #ddd;
        padding: 20px;
        max-width: 600px;
        margin: 0 auto;
    }

    .email-content {
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .email-footer {
        text-align: center;
        padding: 10px;
        border-top: 1px solid #ddd;
        font-family: Calibri;
        color: #696969;
        font-size: 1.1em;
    }

    .note {
        color: #696969;
        font-style: italic;
    }
</style>

@if (Model != null && Model.Any())
{
    var leaveUpdate = Model.First();
    <div class="email-container">
        <div class="email-content">
            <table width="100%" cellpadding="0" cellspacing="0" border="0">
                <tr>
                    <td style="padding: 0;">
                        <p style="margin-top: 0;">Hello <strong>@leaveUpdate.employee_name</strong>,</p>
                    </td>
                    <td align="right" style="padding: 0;">
                        <a href="@siteURL" target="_blank">
                            <img src="@logoURL" alt="AMBC Logo" width="80" style="display: block;">
                        </a>
                    </td>
                </tr>
            </table>

            <p>
                As per the request, @leaveUpdate.employee_name's leave has been applied by @leaveUpdate.createdby.
            </p>

            <p>
                <strong>Employee Name:</strong> @leaveUpdate.employee_name<br /><br />
                <strong>From Date:</strong> @(leaveUpdate.Fromdate?.ToString("dd-MM-yyyy") ?? "N/A")<br /><br />
                <strong>To Date:</strong> @(leaveUpdate.Todate?.ToString("dd-MM-yyyy") ?? "N/A")<br /><br />
                <strong>Submitted By:</strong> @leaveUpdate.createdby<br /><br />
                <strong>Leave Type:</strong> @leaveUpdate.leavesource<br /><br />                
                <strong>Backup Resource:</strong> @leaveUpdate.BackupResource_Name<br /><br />
                <strong>Emergency Contact:</strong> @leaveUpdate.EmergencyContact_no<br />
            </p>

            <p>Please update your leave info in your client calendar and upcoming out-of-office in your signature.</p>

            <p class="note">
                <strong>Note:</strong> All ‘Earned Leaves’ require 2 weeks’ notice to get approval from the management and clients.
            </p>
        </div>

        <div class="email-footer">
            This is an automated email, please do not reply.
            <br />
            Automated mail from
            <a href="https://prm.ambctechnologies.com" style="color: #2693F8;">
                https://prm.ambctechnologies.com
            </a>
        </div>
    </div>
}
