@model HRMS.Subscription

@{

    var siteURL = System.Configuration.ConfigurationManager.AppSettings["siteURL"];
    var logoURL = siteURL + "/Assets/AMBC_Logo.png";
}
<table width="100%" cellpadding="0" cellspacing="0" border="0" style="background-color:#ffffff;">
    <tr>
        <td style="padding:0;">
            <p>Dear IT Team,</p>
        </td>
        <td align="right" style="padding: 0;">
            <a href="@siteURL" target="_blank">
                <img src="@logoURL" alt="AMBC Logo" width="80" style="display: block;">
            </a>
        </td>
    </tr>
</table>


<p>The following subscription is due for renewal in @Model.DaysUntilRenewal days:</p>
<ul>
    <li><strong>Subscription ID:</strong> @Model.SubscriptionID</li>
    <li><strong>Subscription Name:</strong> @Model.SubscriptionName</li>
    <li>
        <strong>Renewal Date:</strong>
        @if (Model.RenewalDate.HasValue)
        {
            @Model.RenewalDate.Value.ToString("dd-MM-yyyy")
        }
    </li>
</ul>

<p>Please ensure the necessary actions are taken.</p>

<p>Thank you.</p>

