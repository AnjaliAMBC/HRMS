@model HRMS.VendorList

@{

    var siteURL = System.Configuration.ConfigurationManager.AppSettings["siteURL"];
    var logoURL = siteURL + "/Assets/AMBC_Logo.png";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }

        th, td {
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

        h2 {
            color: #4CAF50;
        }

        p {
            font-size: 14px;
            color: #333;
        }
        .table_head td{
            border:1px solid transparent;
        }
    </style>
</head>
<body>
    <div class="container">
        <table class="table_head" width="100%" cellpadding="0" cellspacing="0" border="0">
            <tr>
                <td style="padding: 15px 0; border: 1px solid transparent;">
                    <h2 style="padding:0px">Vendor Approval Request</h2>
                </td>
                <td align="right" style="padding: 15px 0; border: 1px solid transparent;">
                    <a href="@siteURL" target="_blank">
                        <img src="@logoURL" alt="AMBC Logo" width="80" style="display: block;">
                    </a>
                </td>
            </tr>
        </table>
        <p>A new vendor has been added and is pending approval. Please find the details below:</p>
        <table>
            <tr>
                <th style="border: 1px solid #ddd; text-align: left; ">Vendor ID</th>
                <td style="border: 1px solid #ddd; text-align: left; ">@Model.VedorID</td>
            </tr>
            <tr>
                <th style="border: 1px solid #ddd; text-align: left; ">Vendor Name</th>
                <td style="border: 1px solid #ddd; text-align: left; ">@Model.VendorName</td>
            </tr>
            <tr>
                <th style="border: 1px solid #ddd; text-align: left; ">Vendor Email</th>
                <td style="border: 1px solid #ddd; text-align: left; ">@Model.VendorEmail</td>
            </tr>
            <tr>
                <th style="border: 1px solid #ddd; text-align: left; ">Vendor Contact</th>
                <td style="border: 1px solid #ddd; text-align: left; ">@Model.VendorContact</td>
            </tr>
            <tr>
                <th style="border: 1px solid #ddd; text-align: left; ">Vendor Address</th>
                <td style="border: 1px solid #ddd; text-align: left; ">@Model.VendorAddress</td>
            </tr>
            <tr>
                <th style="border: 1px solid #ddd; text-align: left; ">Vendor Type</th>
                <td style="border: 1px solid #ddd; text-align: left; ">@Model.VendorType</td>
            </tr>
            <tr>
                <th style="border: 1px solid #ddd; text-align: left; ">Vendor GST</th>
                <td style="border: 1px solid #ddd; text-align: left; ">@Model.VendorGST</td>
            </tr>
            <tr>
                <th style="border: 1px solid #ddd; text-align: left; ">Status</th>
                <td style="border: 1px solid #ddd; text-align: left; ">@Model.Status</td>
            </tr>
            <tr>
                <th style="border: 1px solid #ddd; text-align: left; ">Created By</th>
                <td style="border: 1px solid #ddd; text-align: left; ">@Model.CreatedBy</td>
            </tr>
            <tr>
                <th style="border: 1px solid #ddd; text-align: left; ">Created Date</th>
                <td style="border: 1px solid #ddd; text-align: left; ">
                    @if (Model.CreatedDate.HasValue)
                    {
                        @Model.CreatedDate.Value.ToString("dd-MM-yyyy")
                    }
                </td>
            </tr>
        </table>
    </div>
</body>
</html>

