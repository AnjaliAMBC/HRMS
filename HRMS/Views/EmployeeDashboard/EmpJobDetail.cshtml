<!-- ReferFriend Modal -->
<div class="modal right fade" id="ReferFriendPopup" tabindex="-1" role="dialog" aria-labelledby="ReferFriendPopup" data-Jobid="@Model.jobInfo.JobID">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="referfriend-header-title">Refer a Friend</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="far fa-times-circle" aria-hidden="true"></i></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <input type="hidden" id="ReferFriend-JobID" />
                    <input type="hidden" id="ReferFriend-EmployeeID" />
                    <div class="col-lg-12 referfriend-detail-title-block">
                        <div class="title-block-left">@Model.jobInfo.JobTitle</div>
                    </div>
                    <div class="col-lg-12 referfriend-detail-work-block">
                        <div class="work-block-experince">Work Experience: @Model.jobInfo.Experience</div>
                        <div class="title-block-location">Location: @Model.jobInfo.Location</div>
                    </div>
                    <div class="col-lg-12 referfriend-info-block">
                        <div class="col-lg-5 col-md-5">
                            <div class="form-group referfriend-referralid">
                                <label for="ReferFriend-Referralid">Referral ID</label>
                                <input type="text" class="form-control" id="ReferFriend-Referralid" value="@Model.EmpInfo.EmployeeID" readonly>
                                <div class="invalid-feedback">Referral ID is required.</div>
                            </div>
                        </div>
                        <div class="col-lg-7 col-md-7">
                            <div class="form-group referfriend-referredby">
                                <label for="ReferFriend-Referredby">Referred By</label>
                                <input type="text" class="form-control" id="ReferFriend-Referredby" value="@Model.EmpInfo.EmployeeName" readonly>
                                <div class="invalid-feedback">Referred By is required.</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 referfriend-upload-left">
                        <div class="referfriend-upload-left-block">
                            <span class="referfriend-upload-icon">
                                <img src="~/Assets/upload-icon.png">
                            </span>
                            <span class="referfriend-upload-btn">
                                <span class="referfriend-attach-upload-btn-wrapper">
                                    <button type="button" class="btn referfriend-attach-label" disabled>Upload your resume/CV</button>
                                    <input type="file" id="referfriend-attach-file-upload" name="Attachment" accept=".doc, .docx, .pdf">
                                </span>
                                <span class="referfriend-file-name"></span>
                                <div class="referfriend-attach-file-upload-size">Only doc, docx, pdf</div>
                            </span>
                        </div>                        
                        <span class="error-message" id="referfriend-attach-error"></span>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="form-group referfriend-referralname">
                            <label for="ReferFriend-ReferralName">Referral Name</label>
                            <input type="text" class="form-control" id="ReferFriend-ReferralName" value="" placeholder="Enter Referral Name">
                            <div class="invalid-feedback">Referral Name is required.</div>
                        </div>
                    </div>
                    <div class="col-lg-12 referfriend-contact-block">
                        <div class="form-group referfriend-contact">
                            <label for="ReferFriend-Contact">Referral Contact</label>
                            <div class="ReferFriend-Contact-Fields">
                                <select name="ReferFriend-ContactCode" class="ReferFriend-ContactCode form-control form-select" id="ReferFriend-ContactCode">
                                    <option value="" selected>+91</option>
                                </select>
                                <input type="text" class="form-control" id="ReferFriend-Contact" value="" placeholder="Enter Contact Number">
                                <div class="invalid-feedback">Referral Contact is required.</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 referfriend-email-block">
                        <div class="form-group referfriend-email">
                            <label for="ReferFriend-ReferralEmail">Referral Email</label>
                            <input type="email" class="form-control" id="ReferFriend-ReferralEmail" value="" placeholder="Enter Referral Email">
                            <div class="invalid-feedback">Referral Email is required.</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 text-right">
                        <button type="button" class="btn btn-primary referfriend-submit" data-maintenancesno="">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



