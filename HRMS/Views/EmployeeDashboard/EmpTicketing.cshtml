<script>
    function toggleLeaveTicketHistoryActionOptions(iconElement) {
        const optionsMenu = $(iconElement).next('.emp-tickethistoryoptions');
        $('.emp-tickethistoryoptions').not(optionsMenu).hide(); // Hide any other open menus
        optionsMenu.toggle(); // Toggle visibility of the clicked menu
    }
    $(document).ready(function () {
        /* $(document).on('click', function () {
             $('.emp-tickethistoryoptions').hide();
         });
         $('#leaveTicketHistoryTable').on('click', '.emp-tickethistoryoptions', function (event) {
             event.stopPropagation();
         });*/
    });

    function emptickethistorycancel(currentthis) {
        var ticketName = currentthis.attr("data-ticketname");

        // Store leave name in a global variable or data attribute
        $('#empTicketConfirmCancelButton').data('ticketname', ticketName);

        // Show the confirmation modal
        $('#empTicketConfirmCancelModal').modal('show');
    }

    // Add a click event listener for the confirm button in the modal
    $('#empTicketConfirmCancelButton').on('click', function () {
        var ticketName = $(this).data('ticketname');

        $.ajax({
            url: '/empLeave/EmpLeaveCancel',
            type: 'POST',
            dataType: 'json',
            data: { ticketnumber: ticketName },
            success: function (response) {
                //GetEmpLeaveHistory();
                if (response.StatusCode == 200) {
                    showMessageModal(response.Message, true);
                } else {
                    showMessageModal(response.Message, false);
                }
            },
            error: function (xhr, status, error) {
                console.error("Error occurred: " + error);
            }
        });

        // Hide the modal after the AJAX call is made
        $('#empTicketConfirmCancelModal').modal('hide');
    });

    function emptickethistorycommentpopup(currentthis) {
        var ticketName = currentthis.attr("data-ticketname");

        // Show the confirmation modal
        $('#empTicketCommentsModal').modal('show');
    }

</script>

