
@{
    ViewBag.Title = "EmpTimesheetSubmit";
}

@Html.Partial("_EmployeeNavbar")
<div class="container-fluid emp-entertimesheet-list-horizon">
    <div class="main-content container-fluid">
        <div class="content employee-entertimesheet">
            <div class="emp-entertimesheet-container">
                <div class="row res-emp-entertimesheet-header">
                    <div class="col-lg-3 res-emp-entertimesheet-title">
                        <h4>Enter Timesheet</h4>
                    </div>
                </div>
            </div>

            <div class="emp-entertimesheet-details entertimesheet-nav" id="empEntertimesheet">
                <div class="emp-entertimesheet-block1">
                    <span class="emp-entertimesheet-weekno">Week 42</span>
                    <span class="emp-entertimesheet-weekrange-info">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                        <span class="emp-entertimesheet-weekrange">04 November 2024 <i class="fa fa-long-arrow-right" aria-hidden="true"></i> 10 November 2024</span>
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="emp-entertimesheet-block2">
                    <div class="emp-entertimesheet-rangedates">
                        <span class="active">04-11-2024</span>
                        <span>05-11-2024</span>
                        <span>06-11-2024</span>
                        <span>07-11-2024</span>
                        <span>08-11-2024</span>
                        <span>09-11-2024</span>
                        <span>10-11-2024</span>
                    </div>                    
                </div>

                <div class="emp-entertimesheet-block3">
                    <div class="form-group div-entertimesheet-clientname" >
                        <label for="entertimesheetClientName" class="leave_label">Client*</label>
                        <select class="form-control" id="entertimesheetClientName">
                            <option selected disabled>Select Client</option>
                            <option value="1">Test1</option>
                        </select>
                        <span class="error-message" id="entertimesheetClientName-error"></span>
                    </div>
                </div>

                <div class="emp-entertimesheet-block4">

                    <div class="row emp-entertimesheet-fields row-1">
                        <div class="form-group col-lg-1 div-entertimesheet-category">
                            <label for="entertimesheetCategory" class="leave_label">Category*</label>
                            <select class="form-control" id="entertimesheetCategory">
                                <option value="1">Test1</option>
                            </select>
                        </div>
                        <div class="form-group col-lg-2">
                            <label for="entertimesheetTaskName">Incident/Task Name*</label>
                            <input type="text" class="form-control" id="entertimesheetTaskName" value="" placeholder="Incident/Task Name">
                        </div>
                        <div class="form-group col-lg-3">
                            <label for="entertimesheetTaskDesc">Incident/Task Description*</label>
                            <input type="text" class="form-control" id="entertimesheetTaskDesc" value="" placeholder="Incident/Task Description">
                        </div>
                        <div class="form-group col-lg-2">
                            <label for="entertimesheetRequester">Requester</label>
                            <input type="text" class="form-control" id="entertimesheetRequester" value="">
                        </div>
                        <div class="form-group col-lg-2">
                            <label for="entertimesheetHoursSpent">Hours Spend*</label>
                            <input type="text" class="form-control" id="entertimesheetHoursSpent" value="">
                        </div>
                        <div class="form-group col-lg-1 div-entertimesheet-priority">
                            <label for="entertimesheetPriority" class="leave_label">Priority*</label>
                            <select class="form-control" id="entertimesheetPriority">
                                <option value="1">High</option>
                                <option value="2">Medium</option>
                                <option value="3">Low</option>
                            </select>
                        </div>
                        <div class="form-group col-lg-1 div-entertimesheet-status">
                            <label for="entertimesheetStatus" class="leave_label">Status*</label>
                            <select class="form-control" id="entertimesheetStatus">
                                <option value="1">Closed</option>
                                <option value="2">Open</option>
                            </select>
                        </div>
                    </div>

                    <div class="emp-entertimesheet-footer">
                        <div class="emp-entertimesheet-addtask">Add Task</div>
                        <div class="emp-entertimesheet-save"><button type="button" class="btn btn-primary">Save</button></div>
                    </div>

                </div>

            </div>

        </div>
    </div>
</div>