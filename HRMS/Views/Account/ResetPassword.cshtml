@model HRMS.Models.ResetPasswordModel

<style>
    .reset-container {
        width: 40%;
        margin: 0 auto;
        padding: 20px;
        background-color: rgba(255, 255, 255, 1);
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        margin-top: 100px;
        position: relative;
    }

    .reset-heading {
        margin-bottom: 28px;
        margin-left: 9%;
        font-size: 24px;
    }

    #resetpasswordform {
        margin-left: 38px;
    }

    .confirmPassword-continue {
        width: 91%;
        padding: 3%;
        margin-bottom: 30px;
    }

    .backtologin-btn {
        margin-left: 32%;
        margin-bottom: 81px;
        width: 118px;
        padding: 9px;
    }

    .confirmPassword-message {
        margin-left: 10%;
        font-size: 22px;
        margin-top: 80px;
        display: none;
    }

    body {
        background-color: #F2F6FF;
    }
</style>

<img src="~/Assets/AMBC_Logo.png" alt="Logo" class="logo">
<div class="container">
    <div class="reset-container">
        <h2 class="mb-4 login-heading reset-heading">Reset Password</h2>
        <form id="resetpasswordform">
            <div class="reset-form">
                <div class="form-group">
                    <label for="resetPassword" class="form-label d-flex justify-content-between align-items-center">
                        New Password
                    </label>
                    <input type="password" id="resetPassword" class="form-control input-lg" placeholder="Enter your password">
                    <span class="text-danger" id="resetpasswordError"></span>
                </div>
                <div class="form-group">
                    <label for="resetconfirmPassword" class="form-label d-flex justify-content-between align-items-center">
                        Confirm Password
                    </label>
                    <input type="password" id="resetconfirmPassword" class="form-control input-lg" placeholder="Re Enter your password">
                    <span class="text-danger" id="resetpasswordError"></span>
                </div>

                <button type="button" class="btn btn-primary confirmPassword-continue">Continue</button>
            </div>
            <div class="confirmPassword-message">
            </div>
            <button type="button" class="btn btn-primary backtologin-btn" style="display: none; margin-left: 30%">Back to login</button>

            @if (Model != null && Model.EmpInfo != null)
            {
                <div class="reset-empid" style="display: none">@Model.EmpInfo.EmployeeID</div>
            }

        </form>
    </div>
</div>



