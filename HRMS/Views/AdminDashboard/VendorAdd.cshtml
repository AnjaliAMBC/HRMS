@Html.Partial("_NavBar")
<div class="container-fluid">
    <div class="hiddenadmindashboard" style="display: none"></div>
    @Html.Partial("_adminsidemenu")
<div class="main-content container-fluid VendorAdding-tab" style="width: 84%">
    <div class="content admin-vendoradd-container">
        <div class="admin-vendor-add">
            <div class="container-fluid top admin-vendoradd">
                <div class="row navbar align-items-center mb-4 mt-2">
                    <h4 class="header mb-0 text-right">Vendor Details</h4>
                </div>
                    <form id="vendor-form" class="admin-vendorform needs-validation" novalidate>
                        <div class="container " style="margin-left: 5px">
                            <div class="row">
                                <div class="col-lg-3 col-md-6">
                                    <div class="form-group vendoradd-tabs">
                                        <label for="VendorID">Vendor ID</label>
                                        <input type="number" class="form-control" id="VendorID" placeholder="Enter Vendor ID" required>
                                        <small style="font-size: 12px; float: right;">Last Vendor ID: 23</small>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-6">
                                    <div class="form-group vendoradd-tabs">
                                        <label for="VendorName">Vendor Name</label>
                                        <input type="text" class="form-control" id="VendorName" placeholder="Enter Vendor Name" required>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="form-group vendoradd-tabs">
                                        <label for="VendorEmail">Vendor Email</label>
                                        <input type="text" class="form-control" id="VendorEmail" placeholder="Enter Vendor Email" required>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="form-group vendoradd-tabs">
                                        <label for="VendorContact">Vendor Contact</label>
                                        <input type="text" class="form-control" id="VendorContact" placeholder="Enter Contact number" required>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group vendoradd-tabs">
                                        <label for="VendorAddress">Vendor Address</label>
                                        <input type="text" class="form-control" id="VendorAddress" placeholder="Enter Vendor Address" required>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="form-group vendoradd-tabs">
                                        <label for="VendorType">Vendor Type</label>
                                        <div class="d-flex">
                                            <select name="VendorType" class="VendorType form-control form-select" id="VendorType">
                                                <option value="" disabled="" selected="" hidden="">Select Vendor Type</option>
                                                <option value="option1">Option 1</option>
                                                <option value="option2">Option 2</option>
                                            </select>
                                            <div class="input-group-append">
                                                <button class="btn btn-secondary btn-sm" type="button" data-toggle="modal" data-target="">
                                                    <i class="fas fa-plus fa-xs"></i>
                                                </button>
                                            </div>
                                            </div>
                                        </div>
                                    </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="form-group vendoradd-tabs">
                                        <label for="VendorGST">Vendor GST</label>
                                        <input type="text" class="form-control" id="VendorGST" placeholder="Enter Vendor GST number" required>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-6">
                                    <div class="form-group vendoradd-tabs">
                                        <label for="VendorCreatedby">Created By</label>
                                        <select name="VendorCreatedby" class="VendorCreatedby form-control form-select" id="VendorCreatedby">
                                            <option value="" disabled="" selected="" hidden="">Created by</option>
                                            <option value="option1">Option 1</option>
                                            <option value="option2">Option 2</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-6">
                                    <div class="form-group vendoradd-tabs">
                                        <label for="VendorCreateddate">Created Date</label>
                                        <input type="date" class="form-control" id="VendorCreateddate" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row ">
                                <div class="col-lg-12 col-md-12 text-right">
                                    <button type="button" class="btn vendoradd-Cancel">Cancel</button>
                                    <button type="button" class="btn btn-primary vendoradd-Update">Update</button>
                                </div>
                            </div>
                            </div>
                        </form>

                    </div>
            </div>
        </div>
    </div>
    </div>




