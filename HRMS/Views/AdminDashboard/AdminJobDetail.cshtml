@model HRMS.Models.Admin.AdminJobModel
@{
    ViewBag.Title = "AdminJobDetail";
}

@Html.Partial("_NavBar")
<div class="container-fluid res-admin-jobreferral">
    <div class="hiddenadmindashboard" style="display: none"></div>
    @Html.Partial("_adminsidemenu")
<div class="main-content container-fluid admin-jobreferral-list-horizon admin-jobreferral-detail-horizon" style="width: 86%">
        <div class="content admin-jobreferral" style="margin-top:20px;padding:0px">
            <div class="admin-jobreferal-container">
                <div class="row admin-jobreferral-header">
                    <div class="col-lg-12 admin-jobreferral-title">
                        <h4>@Model.jobDetail.JobTitle-@Model.jobDetail.JobID</h4>
                    </div>
                </div>
            </div>

            <div class="admin-jobreferral-details" id="adminJobReferralDetail">
                <div class="row">
                    <div class="col-lg-8 admin-jobreferral-detail-left">
                        <div class="admin-jobreferral-detail-work-block">
                            <div class="work-block-experince">Work Experience : @Model.jobDetail.Experience</div>
                            <div class="title-block-location">Location : @Model.jobDetail.Location</div>
                        </div>
                        <div class="admin-jobreferral-detail-desc-block">
                            <div class="emp-jobreferral-detail-desc-title" style="font-weight:700;margin-bottom:10px;">Job Description:</div>
                            <div>
                                <p>@Model.jobDetail.JobDescription</p>
                            </div>                
                        </div>                     
                        
                    </div>
                    <div class="col-lg-4 admin-jobreferral-detail-right">
                        <div class="admin-jobreferal-details">
                            <div class="admin-jobreferral-detail-title">Track Referal Status</div>
                            <div class="admin-jobreferral-detail-body">
                                <div class="admin-jobreferral-detail-track">
                                    <div class="row">
                                        <div class="col-lg-2 col-md-1 col-sm-2 admin-jobreferral-detail-track-left">
                                            <div class="userIcon"><img src="~/Assets/calender-icon.png" alt="Image" class="admin-jobreferral-detail-track-image" style="height:38px;"></div>
                                            <div class="status-line"></div>
                                        </div>
                                        
                                        <div class="col-lg-9 col-md-10 col-sm-10 admin-jobreferral-detail-track-mid" style="padding-top:6px;line-height:1.2rem">
                                            <span class="admin-jobreferral-detail-track-ref">Created Date</span><br />
                                            <span class="admin-jobreferral-detail-track-refvalue">
                                                <b>
                                                    @if (Model.jobDetail.PostedDate.HasValue)
                                                    {
                                                        @Model.jobDetail.PostedDate.Value.ToString("dd MMMM yyyy")
                                                    }
                                                    else
                                                    {
                                                        <span>No date available</span>
                                                    }
                                                </b>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                               
                                <div class="admin-jobreferral-detail-track">
                                    <div class="row">
                                        <div class="col-lg-2 col-md-1 col-sm-2 admin-jobreferral-detail-track-left">
                                            <div class="userIcon"><img src="~/Assets/status_icon.png" alt="Image" class="admin-jobreferral-detail-track-image"  style="height:38px;"></div>
                                        </div>
                                        <div class="col-lg-9 col-md-10 col-sm-10 admin-jobreferral-detail-track-mid" style="padding-top:6px;line-height:1.2rem;">
                                            <span class="admin-jobreferral-detail-track-status">Status</span><br />
                                            <span class="admin-jobreferral-detail-track-statusvalue"><b>@Model.jobDetail.JobStatus</b></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

