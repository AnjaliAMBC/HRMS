@model HRMS.Models.Admin.AdminDashView

<div class="admin-dashboard-view">

    <div class="height-100 m-3 pl-2">
        <div class="row">
            <div class="col-6 col-sm-4 col-md-4 col-lg-4 col-xl-4 mt-3 page_header mb-2">
                Dashboard
            </div>
        </div>
        <div class="row">

            <!---Card of Leave Request start's here---->
            <div class="col-4 col-sm-4 col-md-4 col-lg-4 col-xl-4 pt-1 pr-5 mb-4">

                <div class="card">
                    <div class="box_topic pl-3 py-2">
                        Leave Request
                    </div>

                    <!-----Body of the Leave Request persons-------->
                    <div class="card-body box_body">
                        <div class="box_content">
                            <!--A row of Leave request person start's here-->
