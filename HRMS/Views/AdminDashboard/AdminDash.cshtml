                            </div>
                            <div class="box_approvel_row d-flex">
                                <button type="submit" class="btn_approve ml-auto">✔ Approve</button>
                                <button type="submit" class="btn_reject mr-2 ml-1">✖ Reject</button>
                            </div>
                        </div><!--A row of Leave Request person end's here-->

                        <div class="box_content">
                            <!-- Duplicate rows only for front-end is added here-->
                            <div class="box_empcontent d-flex pt-3">
                                <div class="box_img pl-2">
                                    <img src="./Assets/image/Emp_Deepa.jpg" alt="emp_pic" class="box_empimg">
                                </div>
                                <div class="emp_boxname pt-1 pl-2">
                                    <h6>Rajesh Kumar</h6>
                                    <p>Emergency Leave | 29-04-2024</p>
                                </div>
                                <i class="fa  fa-circle-exclamation ml-auto pr-4 mt-2"></i>
                            </div>
                            <div class="box_approvel_row d-flex">
                                <button type="submit" class="btn_approve ml-auto">✔ Approve</button>
                                <button type="submit" class="btn_reject mr-2 ml-1">✖ Reject</button>
                            </div>
                        </div>
                        <div class="box_content">
                            <div class="box_empcontent d-flex pt-3">
                                <div class="box_img pl-2">
                                    <img src="./Assets/image/Emp_Deepa.jpg" alt="emp_pic" class="box_empimg">
                                </div>
                                <div class="emp_boxname pt-1 pl-2">
                                    <h6>Rajesh Kumar</h6>
                                    <p>Emergency Leave | 29-04-2024</p>
                                </div>
                                <i class="fa  fa-circle-exclamation ml-auto pr-4 mt-2"></i>
                            </div>
                            <div class="box_approvel_row d-flex">
                                <button type="submit" class="btn_approve ml-auto">✔ Approve</button>
                                <button type="submit" class="btn_reject mr-2 ml-1">✖ Reject</button>
                            </div>
                        </div>
                        <div class="box_content">
                            <div class="box_empcontent d-flex pt-3">
                                <div class="box_img pl-2">
                                    <img src="./Assets/image/Emp_Deepa.jpg" alt="emp_pic" class="box_empimg">
                                </div>
                                <div class="emp_boxname pt-1 pl-2">
                                    <h6>Rajesh Kumar</h6>
                                    <p>Emergency Leave | 29-04-2024</p>
                                </div>
                                <i class="fa  fa-circle-exclamation ml-auto pr-4 mt-2"></i>
                            </div>
                            <div class="box_approvel_row d-flex">
                                <button type="submit" class="btn_approve ml-auto">✔ Approve</button>
                                <button type="submit" class="btn_reject mr-2 ml-1">✖ Reject</button>
                            </div>
                        </div>
                        <div class="box_content">
                            <div class="box_empcontent d-flex pt-3">
                                <div class="box_img pl-2">
                                    <img src="./Assets/image/Emp_Deepa.jpg" alt="emp_pic" class="box_empimg">
                                </div>
                                <div class="emp_boxname pt-1 pl-2">
                                    <h6>Rajesh Kumar</h6>
                                    <p>Emergency Leave | 29-04-2024</p>
                                </div>
                                <i class="fa  fa-circle-exclamation ml-auto pr-4 mt-2"></i>
                            </div>
                            <div class="box_approvel_row d-flex">
                                <button type="submit" class="btn_approve ml-auto">✔ Approve</button>
                                <button type="submit" class="btn_reject mr-2 ml-1">✖ Reject</button>
                            </div>
                        </div><!----The duplicate rows end's here -->
                    </div>
                </div>
            </div>
            <!----Card of Leave Request end's here---->
            <!----Card of Announcement starts's here---->
            <div class="col-4 col-sm-4 col-md-4 col-lg-4 col-xl-4 pt-1 pr-5 ">
                <div class="card">
                    <div class="box_topic pl-3 py-2">
                        Announcements
                    </div>
                    <div class="card-body box_body">
                        <!----Body of Announcements strat's here----->
                        <div class="announce_bodyhead ml-1 d-flex lh-1">
                            <i class="fa-solid fa-gift mr-1"></i>
                            <p>Greetings</p>
                        </div>
                        <div class="subject_announce d-flex flex-column px-4">
                            <label for="subject" class="m-0 ">Subject</label>
                            <input type="text" class="sub_announce mb-2" placeholder="Happy Womens Day to all aspering Women">
                            <label for="description" class="m-0">Description</label>
                            <textarea type="text" class="des_announce mb-2" placeholder="Describe the announcement in few words"></textarea>
                            <label for="to" class="m-0">To</label>
                            <input type="text" class="email_announce mb-2">
                            <button class="announce_btn ml-auto mt-2">Send</button>
                        </div>
                        <!----Body of Announcements end's here----->
                    </div>
                </div>
            </div>

            <!-----Card of Calendar starts's here----->
            <div class="col-4 col-sm-4 col-md-4 col-lg-4 col-xl-4 pt-1">
                <div class="card">
                    <div class="card-header calendar-header text-dark">
                        <div>
                            <i class="fas fa-chevron-left chevron-icon ml-4" onclick="prevMonth()"></i>
                        </div>
                        <div>
                            <h6 id="monthYear" class="mt-1"></h6>
                        </div>
                        <div>
                            <i class="fas fa-chevron-right chevron-icon mr-4" onclick="nextMonth()"></i>
                        </div>
                    </div>
                    <div class="card-body calendar-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Mon</th>
                                    <th scope="col">Tue</th>
                                    <th scope="col">Wed</th>
                                    <th scope="col">Thu</th>
                                    <th scope="col">Fri</th>
                                    <th scope="col">Sat</th>
                                    <th scope="col">Sun</th>
                                </tr>
                            </thead>
                            <tbody id="calendarBody"></tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-------Card of Birthday starts here---->
            <div class="col-4 col-sm-4 col-md-4 col-lg-4 col-xl-4 pt-1 pr-5">
                <div class="card">
                    <div class="box_topic pl-3 py-2">
                        Birthdays
                    </div>
                    <!-- Body of Birthday card starts here -->
                    <div class="card-body d-flex flex-column box_body birth_box">
                        @if (Model.BirthModel != null && Model.BirthModel.Any())
                        {
                            foreach (var birthday in Model.BirthModel)
                            {
                                <!-- This is one employee section in birthday card -->
                                <div class="birth_content mb-2">
                                    <div class="birth_empcontent d-flex pt-3">
                                        <div class="birth_img pl-2">
                                            <img src="@birthday.imagePath" alt="birth_pic" class="birth_empimg">
                                        </div>
                                        <div class="emp_birthname pt-1 pl-2">
                                            <h6>@birthday.EmpName</h6>
                                            <p>@birthday.Designation</p>
                                        </div>
                                        <input type="checkbox" class="ml-auto">
                                    </div>
                                </div>
                                <!-- The employee section ends here -->
                            }
                        }
                        else
                        {
                            <p>No birthdays today.</p>
                        }

                        <!-- The wish sending box is here -->
                        <div class="box_approvel_row mt-auto">
                            <div class="input-group">
                                <input type="text" class="form-control birth_text" placeholder="Send them best wishes" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <button class="btn birth_btn" type="button">
                                        <i class="fa-regular fa-paper-plane"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-----The Birthday card end's here---->
            <!-------Anniversary Card starts here------>
            <div class="col-4 col-sm-4 col-md-4 col-lg-4 col-xl-4 pt-1 pr-5">
                <div class="card">
                    <div class="box_topic pl-3 py-2">
                        Anniversaries
                    </div>
                    <!-- Anniversary Body starts here using carousel -->
                    <div id="cardCarousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            @if (Model.AnniversaryModel != null && Model.AnniversaryModel.Any())
                            {
                                for (int i = 0; i < Model.AnniversaryModel.Count; i++)
                                {
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <div class="d-flex">
                                            <div class="card anniver_card mt-4 mb-4">
                                                <!-- This is the carousel body of an employee -->
                                                <div class="card-body d-flex p-0">
                                                    <img src="@Model.AnniversaryModel[i].imagePath" class="anniver_empimg mt-2 ml-2" alt="carousel_emppic">
                                                    <div class="anniver_content ml-2">
                                                        <h5 class="m-0 mt-3">@Model.AnniversaryModel[i].EmpName</h5>
                                                        <p>@Model.AnniversaryModel[i].Designation</p>
                                                        <div class="anniver_success">Successfully Completed @Model.AnniversaryModel[i].years Years</div>
                                                    </div>
                                                </div>
                                                <!-- The carousel body of an employee ends here -->
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="carousel-item active">
                                    <p class="text-center mt-4">No anniversaries today.</p>
                                </div>
                            }
                        </div>
                        <!-- The carousel next button -->
                        <a class="carousel-control-next" href="#cardCarousel" role="button" data-slide="next">
                            <i class="fa-solid fa-chevron-right anniversary-chvron"></i>
                            <span class="sr-only">Next</span>
                        </a>
                        <!-- The carousel next button ends here -->
                    </div>
                    <!-- The wish sending box code -->
                    <div class="box_approvel_row mt-auto">
                        <div class="input-group ">
                            <input type="text" class="form-control birth_text" placeholder="Send them best wishes" aria-label="Recipient's username" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn birth_btn" type="button">
                                    <i class="fa-regular fa-paper-plane"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-----The Anniversary card end's here---->
        <!----The upcoming holiday card starts here---->
        <div class="col-4 col-sm-4 col-md-4 col-lg-4 col-xl-4 pt-1">
            <div class="card mb-3">
                <div class="card-header text-dark">Upcoming Holidays</div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        @foreach (var holiday in Model.UpcomingHolidays)
                        {
                            <li>
                                @holiday.HolidayName
                                <small>@holiday.HolidayDate.ToString("dd MMM dddd")</small>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
