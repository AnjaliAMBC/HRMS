                    </div>

                    <div class="handbook-uploaded-file" id="handbook-uploaded-file-info" style="display: none;">
                        <p style="color: green; font-size: 13px;" id="handbook-uploaded-file-text"></p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="handnook-uploaded-file-test"></div>
                <div class="handnook-uploaded-file-details">
                    <img src="~/Assets/icon-pdf.png">
                    <span class="handbook-uploaded-file-name"><a href="#">test</a></span>
                </div>
                <button type="button" class="btn btn-primary uploadHandbooktSubmit">Submit</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#AnnouncementFile').on('change', function () {
            $(this).attr("data-existingfile", "");
            var fileInput1 = $('#AnnouncementFile');
            var file = fileInput1[0].files[0];
            if (file) {
                var fileName = file.name;
                var fileUrl = URL.createObjectURL(file);

                $('.announcementFile').attr('href', fileUrl).text(fileName).show();
            } else {
                $('.announcementFile').hide();
            }
            console.log("Announcement File validation passed.");
            
        });

        $('.admin-leave-request').on('click', function () {
            $('.admin-today-leave').removeClass('active');
            $('.admin-leave-request').addClass('active');
            $('.admin-todays-leave-details').css({ 'display': 'none' });
            $('.admin-leave-request-details').css({ 'display': 'block' });
        });

        $('.admin-today-leave').on('click', function () {
            $('.admin-leave-request').removeClass('active');
            $('.admin-today-leave').addClass('active');
            $('.admin-leave-request-details').css({ 'display': 'none' });
            $('.admin-todays-leave-details').css({ 'display': 'block' });
        });

    });    

</script>
