@model HRMS.Models.Admin.AdminDashView

<div class="admin-dashboard-view">
    <div class="container">
        <div class="dashboard">
            <!-- Leave Request Section -->
            <div class="card leave-requests">
                <div class="card-header">
                    Leave Request (5)
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="leave-info">
                            <img src="https://via.placeholder.com/40" alt="Rajesh Kumar" class="rounded-circle">
                            <div class="leave-text">
                                <span>Rajesh Kumar</span>
                                <small>Emergency Leave | 29-04-2024</small>
                            </div>
                        </div>
                        <div class="btn-group">
                            <button type="submit" class="btn_approve">✔ Approve</button>
                            <button type="submit" class="btn_reject">✖ Reject</button>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="leave-info">
                            <img src="https://via.placeholder.com/40" alt="Sriram Vivekanandan" class="rounded-circle">
                            <div class="leave-text">
                                <span>Sriram Vivekanandan</span>
                                <small>Earned Leave | 29-04-2024 - 01-05-2024</small>
                            </div>
                        </div>
                        <div class="btn-group">
                            <button type="submit" class="btn_approve">✔ Approve</button>
                            <button type="submit" class="btn_reject">✖ Reject</button>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="leave-info">
                            <img src="https://via.placeholder.com/40" alt="Linkeshwaran" class="rounded-circle">
                            <div class="leave-text">
                                <span>Linkeshwaran</span>
                                <small>Sick Leave | 29-04-2024</small>
                            </div>
                        </div>
                        <div class="btn-group">
                            <button type="submit" class="btn_approve">✔ Approve</button>
                            <button type="submit" class="btn_reject">✖ Reject</button>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="leave-info">
                            <img src="https://via.placeholder.com/40" alt="Saravanan Maoharan" class="rounded-circle">
                            <div class="leave-text">
                                <span>Saravanan Maoharan</span>
                                <small>Emergency Leave | 29-04-2024</small>
                            </div>
                        </div>
                        <div class="btn-group">
                            <button type="submit" class="btn_approve">✔ Approve</button>
                            <button type="submit" class="btn_reject">✖ Reject</button>
                        </div>
                    </li>
                    <!-- Additional leave requests -->
                    <li class="list-group-item">
                        <div class="leave-info">
                            <img src="https://via.placeholder.com/40" alt="John Doe" class="rounded-circle">
                            <div class="leave-text">
                                <span>John Doe</span>
                                <small>Personal Leave | 30-04-2024</small>
                            </div>
                        </div>
                        <div class="btn-group">
                            <button type="submit" class="btn_approve">✔ Approve</button>
                            <button type="submit" class="btn_reject">✖ Reject</button>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="leave-info">
                            <img src="https://via.placeholder.com/40" alt="Jane Smith" class="rounded-circle">
                            <div class="leave-text">
                                <span>Jane Smith</span>
                                <small>Vacation | 01-05-2024 - 05-05-2024</small>
                            </div>
                        </div>
                        <div class="btn-group">
                            <button type="submit" class="btn_approve">✔ Approve</button>
                            <button type="submit" class="btn_reject">✖ Reject</button>
                        </div>
                    </li>
                </ul>
            </div>

            <!-- Announcements Section -->
            <div class="card">
                <div class="card-header">
                    Announcements
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="subject">Subject</label>
                            <input type="text" class="form-control" id="subject" placeholder="Enter subject">
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" id="description" rows="3" placeholder="Describe the announcement in few words."></textarea>
                        </div>
                        <div class="form-group">
                            <label for="to">To</label>
                            <input type="text" class="form-control" id="to" placeholder="Enter recipients">
                        </div>
                        <button type="submit" class="btn btn-primary">Send</button>
                    </form>
                </div>
            </div>

            <!-- Calendar Section -->
            <div class="card">
                <div class="card-header">
                    January 2024
                </div>
                <div class="card-body">
                    <!-- Calendar placeholder -->
                    <div id="calendar"></div>
                </div>
            </div>

            <!-- Birthdays Section -->
            <div class="card">
                <div class="card-header">
                    Birthdays
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <img src="https://via.placeholder.com/30" alt="Gnana Sampath" class="rounded-circle">
                                <span>Gnana Sampath</span><br>
                                <small>Business Development Manager – IT Staffing</small>
                            </div>
                            <button class="btn btn-info btn-sm">Send them best wishes</button>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <img src="https://via.placeholder.com/30" alt="Sriram Vivekanandan" class="rounded-circle">
                                <span>Sriram Vivekanandan</span><br>
                                <small>Graphic UI UX Designer</small>
                            </div>
                            <button class="btn btn-info btn-sm">Send them best wishes</button>
                        </div>
                    </li>
                </ul>
            </div>

            <!-- Anniversaries Section -->
            <div class="card">
                <div class="card-header">
                    Anniversaries
                </div>
                <div class="card-body text-center">
                    <img src="https://via.placeholder.com/50" alt="Sriram Vivekanandan" class="rounded-circle mb-2">
                    <p>Sriram Vivekanandan<br><small>Graphic UI UX Designer</small></p>
                    <p>Successfully completed 2 years</p>
                    <button class="btn btn-info btn-sm">Send them best wishes</button>
                </div>
            </div>

            <!-- Upcoming Holidays Section -->
            <div class="card">
                <div class="card-header">
                    Upcoming Holidays
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Independence Day - 15 Aug Thursday</li>
                    <li class="list-group-item">Vinayak Vratha/Ganesh Chathurthi - 07 Sept Saturday</li>
                    <li class="list-group-item">Mahatma Gandhi Jayanthi - 02 Oct Wednesday</li>
                    <li class="list-group-item">Ayudha Pooja - 12 Oct Saturday</li>
                    <li class="list-group-item">Dussehra/Vijaya Dashami - 13 Oct Sunday</li>
                    <li class="list-group-item">Diwali - 31 Oct Thursday</li>
                </ul>
            </div>
        </div>
    </div>

</div>
