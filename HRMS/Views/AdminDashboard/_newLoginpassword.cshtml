@model HRMS.emplogin

@{
    var passwordResetLink = "";
    var loginPageLink = "";
}

@if (Model != null)
{
    var siteURL = System.Configuration.ConfigurationManager.AppSettings["siteURL"];
    var logoURL = siteURL + "/Assets/AMBC_Logo.png";

    passwordResetLink = siteURL + "/account/resetpassword?empid=" + @Model.EmployeeID;
    loginPageLink = siteURL;

    <div class="emailbodycontent" style="background-color: #f2f2f2; padding: 20px;">
        <div style="background-color: #ffffff; padding: 20px; border: 1px solid #dcdcdc; border-radius: 5px;">
            <div style="font-family: Calibri; color: #696969; display: flex; justify-content: space-between; align-items: center;">
                <h2 style="margin: 0; font-size: 1.2em;">Hello <b>@Model.EmployeeName</b>,</h2>
                <a href="@siteURL" target="_blank" style="align-self: flex-start;">
                    <img src="@logoURL" alt="AMBC Logo" style="max-width: 50px; max-height: 50px;">
                </a>
            </div>

            <div style="font-family: Calibri; color: #696969; margin-top: 20px; font-size: 1.1em;">
                You're now part of the AMBC team! <br />
                Here's how to access your employee account on our web application:
                <br /><br />
                <b>Web Application URL:</b> @siteURL<br />
                <b>User ID:</b> <b>@Model.EmployeeID</b><br />
                <b>Temporary Password:</b> <b>@Model.Password</b>
                <br /><br />
                <b>Steps to Get Started:</b><br />
                1. Visit the Web Application URL.<br />
                2. Enter your User ID and Temporary Password.<br />
                <br />
                For assistance, contact our AMBC HR Team.
            </div>

            <br /><br />

            <div style="font-family: Calibri; color: #696969; font-size: 1.1em;">
                Thanks & Regards,
                <br />
                <b>AMBC HR Department</b>
            </div>
            <br /><br />
        </div>
    </div>

    <div style="font-family: Calibri; color: #696969; font-size: 1.1em;">
        This is an automated email, please do not reply.
        <br />
        Automated mail from <a href="https://prm.ambctechnologies.com" style="color: #2693F8;">https://prm.ambctechnologies.com</a>
    </div>
}
