@model HRMS.emplogin

@{
    var passwordResetLink = "";
    var loginPageLink = "";
    var siteURL = "";
    var logoURL = "";
}

<style>
    body {
        background-color: #fff;
        font-size: initial;
        color: #2167ae;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        text-align: left;
        padding: 8px;
        border: 0px !important;
    }

    tr:nth-child(even) {
        background-color: grey;
    }

    .time-header {
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .emailbody {
        font-family: "Lato", sans-serif;
    }

    .email-footer {
        background-color: #eee;
        font-size: medium;
        height: 25px;
        border-radius: 20px;
    }

    .emailbodycontent {
        font-family: "Lato", sans-serif;
        color: #2167ae;
    }

    .circle {
        height: 20px;
        width: 20px;
        background-color: #d3d3d3;
        border-radius: 50%;
    }
</style>

@if (Model != null)
{
    @{
        if (System.Web.HttpContext.Current.Request.Url.Port == 443)
        {
            siteURL = System.Web.HttpContext.Current.Request.Url.Scheme + "://" + System.Web.HttpContext.Current.Request.Url.Host;
        }
        else
        {
            siteURL = System.Web.HttpContext.Current.Request.Url.Scheme + "://" + System.Web.HttpContext.Current.Request.Url.Host + ":" + System.Web.HttpContext.Current.Request.Url.Port;
        }

        logoURL = siteURL + "/Assets/AMBC_Logo.png";
        passwordResetLink = siteURL + "/account/resetpassword?empid=" + @Model.EmployeeID;
        loginPageLink = siteURL;
    }

    <div class="emailbodycontent">
        <div style="font-family: Calibri; color: #696969; display: flex; align-items: center;">
            <h2>Hello <b>@Model.EmployeeName</b>,</h2>
            <a href="@siteURL" target="_blank" style="margin-left: 10px;">
                <img src="@logoURL" alt="AMBC Logo" style="max-width: 50px;">
            </a>
        </div>

        <div style="font-family: Calibri; color: #696969;">
            You're now part of the AMBC team! <br />
            Here's how to access your employee account on our web application:
            <br /><br />
            <b>Web Application URL:</b> @siteURL<br />
            <b>User ID:</b> @Model.EmployeeID<br />
            <b>Temporary Password:</b> @Model.Password
        </div>

        <br /><br />

        <div style="font-family: Calibri; color: #696969; font-size: initial;">
            Thanks & Regards,
            <br />
            <b>AMBC HR Department</b>
        </div>
        <br /><br />
    </div>
}
