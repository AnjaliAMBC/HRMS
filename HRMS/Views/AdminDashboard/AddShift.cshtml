@model HRMS.Models.Admin.AddShiftModel


<div class="admin-addshift-view">

    <style>
        .bordered {
            border: 1px solid lightgray;
        }

        .btn {
            border: 1px solid lightgray;
        }

        .multiselect-clear-filter {
            border: none;
        }

        .multiselect-container {
            width: -webkit-fill-available;
        }

        .multiselect {
            text-align: left;
        }
    </style>
    <main role="main" class="col-md-9 col-lg-10 px-md-4 content addshiftcontent">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Add Shift</h1>
        </div>
        <div class="card addshiftcard">
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="shiftType" id="departmentRadio" value="department" checked>
                            <label class="form-check-label" for="departmentRadio">Department</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="shiftType" id="employeesRadio" value="employees">
                            <label class="form-check-label" for="employeesRadio">Employees</label>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4" id="departmentDropdown">
                            <label for="selectDepartments">Select Departments</label>
                            <select class="form-control" id="selectDepartments" multiple="multiple">
                                @foreach (HRMS.Models.DropdownItem department in Model.Departments)
                                {
                                    <option value="@department.Name">@department.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-md-4 d-none" id="employeeDropdown">
                            <label for="selectEmployees">Select Employees</label>
                            <select class="form-control" id="selectEmployees" multiple="multiple">
                                @foreach (emp_info selectedEmp in Model.Employees)
                                {
                                    <option value="@selectedEmp.EmployeeID">@selectedEmp.EmployeeName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label for="startTime">Start Time</label>
                            <input type="time" class="form-control" id="startTime" value="09:30">
                        </div>
                        <div class="form-group col-md-2">
                            <label for="endTime">End Time</label>
                            <input type="time" class="form-control" id="endTime" value="06:30">
                        </div>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="notification">
                        <label class="form-check-label" for="notification">Send check-in checkout notification before 15 minutes</label>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3 btn-addshift-submit">Save</button>
                </form>
            </div>
        </div>
    </main>

    <script>
        $(document).ready(function () {
            initializeMultiselect('#selectDepartments', 'Select Departments');
            initializeMultiselect('#selectEmployees', 'Select Employees');

            $('.multiselect').addClass('bordered');

        });
       
    </script>
</div>
