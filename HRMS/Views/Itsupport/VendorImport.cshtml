@Html.Partial("_NavBar")
<div class="container-fluid">
    <div class="hiddenadmindashboard" style="display: none"></div>
    @Html.Partial("_adminsidemenu")
<div class="main-content container-fluid VendorImport-View" style="width: 84%">
    <div class="vendor-import-view">
        <div class="container-fluid res-vendor-import col-lg-6">
            <!-- Headline: Import Vendor -->
            <h4 class="import-vendor-head">Bulk Upload Vendor</h4>

            <!-- Description with bullet points -->
            <div class="vendor-import-description">
                <p>Here's how to import vendors:</p>
                <ul>
                    <li>Prepare your vendor data in a xlsx format.</li>
                    <li>Make sure the CSV file follows the correct format.</li>
                    <li>Use the template provided for best results.</li>
                </ul>
            </div>

            <div>
                <button class="btn btn-primary vendor-download-btn" onclick="downloadVendorTemplate()">Download Template</button>
            </div>
            <p style="margin-bottom: 15px; margin-top: 5px;">Sample excel template</p>

            <div class="vendor-file-upload" id="vendor-file-upload-area" style="border: 2px dashed #007bff; padding: 20px; text-align: center;">
                <label for="vendor-file-upload-input" id="vendor-file-upload-label" style="cursor: pointer;">
                    <i class="fas fa-cloud-upload-alt fa-3x mb-3"></i><br>
                    Drag and drop files or Browse<br>
                    Supported formats: .XLSX
                </label>
                <input type="file" id="vendor-file-upload-input" accept=".xlsx" onchange="handleVendorFileUpload(this)" style="display: none;">
            </div>

            <div class="vendor-uploaded-file" id="vendor-uploaded-file-info" style="display: none;">
                <p style="color: green; font-size: 13px;" id="vendor-uploaded-file-text"></p>
            </div>

            <div class="vendor-submit-button" style="margin-top: 20px;">
                <button class="btn btn-primary btn-vendor-import-submit" style="background-color:#007bff; float: right;">Submit</button>
            </div>

            <div class="modal fade" id="vendorImportSuccessModal" tabindex="-1" role="dialog" aria-labelledby="vendorImportSuccessModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="vendorImportSuccessModalLabel">Import Vendors</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p class="vendor-success-message" style="color: green">Vendors imported successfully!</p>
                        </div>
                        <div class="modal-footer">
                            @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>*@
                            <button type="button" class="btn btn-primary refresh-vendortablist">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
</div>


